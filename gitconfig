    email = steve.ganly@gmail.com

[core]
    excludesfile = ~/.gitignore_global

[color]
    status = auto
    branch = auto

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log -p

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
